<body class="edit_body">
  <h1>Editing Book</h1>

  <%= form_with model: @book do |f| %>
    <div>
      <p>Title</p>
      <%= f.text_field :title %>
    </div>
    <div>
      <p>Body</p>
      <%= f.text_area :body %>
    </div>
    <div>
      <%= f.submit ' Update Book ' %>
    </div>
  
    <a>
      <%= link_to "Show", book_path(@book.id) %> | 
      <%= link_to "Back", '/books' %>
    </a>

  <% end %>
</body>